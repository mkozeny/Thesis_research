package game;


import java.util.List;


public class State {

	private List<Cell> cells;
	
	private int n;
	
	private Integer [][] leftNeighbors;
	
	private Integer [][] leftTopNeighbors;
	
	private Integer [][] leftBottomNeighbors;
	
	private Integer [][] rightNeighbors;
	
	private Integer [][] rightTopNeighbors;
	
	private Integer [][] rightBottomNeighbors;

	public State(List<Cell> cells, int n) {
		super();
		this.cells = cells;
		this.n = n;
		this.leftNeighbors = new Integer[n][n];
		this.leftTopNeighbors = new Integer[n][n];
		this.leftBottomNeighbors = new Integer[n][n];
		this.rightNeighbors = new Integer[n][n];
		this.rightTopNeighbors = new Integer[n][n];
		this.rightBottomNeighbors = new Integer[n][n];
	}
	
	public void initState()
	{
		int j = 0;
		for(int i = 0; i< this.n; i++)
		{
			this.cells.add(new Cell(i,j,1));
			j++;
		}
	}

	public List<Cell> getCells() {
		return cells;
	}

	public void setCells(List<Cell> cells) {
		this.cells = cells;
	}

	public int getN() {
		return n;
	}

	public void setN(int n) {
		this.n = n;
	}
	
	
}
