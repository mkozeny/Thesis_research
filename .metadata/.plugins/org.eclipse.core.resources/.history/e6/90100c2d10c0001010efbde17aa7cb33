package main;

public class NQueensProblemSolver {

	private int n;
	
	private Cell []  cells;
	
	private int pointer;
	
	public NQueensProblemSolver(int n) {
		super();
		this.n = n;
		this.cells = new Cell[n];
		this.pointer = 0;
	}

	public void solveNQueensProblemRecursively(int i, int j)
	{
		if(i<n)
		{
			/*if(pointer == 5)
				System.out.println("OMG");*/
			for(j=0;j<n;j++)
				{
					if(!(isSomeQueenInSameRow(j) || isSomeQueenOnDiagonal(i, j)))
					{
						cells[i] = new Cell(i, j);
						solveNQueensProblemRecursively(++i, 0);
						if(i == n)
							return;
						if(i<n || cells[i+1]==null)
							cells[i]=null;
						
					}
			}
			
		}
	}
	private boolean isSomeQueenInSameRow(int row)
	{
		for(int k=0;k <pointer; k++)
		{
			if(cells[k].getJ() == row)
				return true;
		}
		return false;
	}
	
	private boolean isSomeQueenOnDiagonal(int row, int column)
	{
		for(int k = 0;k<pointer;k++)
			{
				if(cells[k].getI() - cells[k].getJ() == row - column
						|| cells[k].getI() + cells[k].getJ() == row + column)
					return true;
		}
		return false;
	}
	
	public Cell[] getCells()
	{
		return this.cells;
	}
}
