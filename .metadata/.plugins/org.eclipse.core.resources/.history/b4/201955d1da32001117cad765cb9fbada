package main;


import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

import cz.kozenym.graph.Graph;

public class Main {

	/**
	 * @param args
	 * @throws IOException
	 * @throws FileNotFoundException
	 * @throws ClassNotFoundException
	 */
	public static void main(String[] args) throws FileNotFoundException,
			IOException, ClassNotFoundException {
		int countOfNodes = args.length>=1?Integer.parseInt(args[0]):30;
		int maxGrade = args.length==2?Integer.parseInt(args[1]):3;
		if(args.length!=2)
		{
			System.out.println("First argument is count of nodes");
			System.out.println("Second argument is max grade");
		}
		System.out.println("Used arguments: countOfNodes="+countOfNodes+", maxGrade="+maxGrade);
		Graph graph = new Graph(countOfNodes, maxGrade);
		graph.generateGraph();

		ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(
				"/home/kozenym/Desktop/DP/measurement/graphs/graph_"+countOfNodes+"_"+maxGrade+".txt"));
		oos.writeObject(graph);
		oos.close();

		/*ObjectInputStream ois = new ObjectInputStream(new FileInputStream(
				"graph.txt"));
		Graph newGraph = (Graph) ois.readObject();
		ois.close();

		boolean[][] postMatrixOfIncidency = newGraph.getMatrixOfIncidency();
		System.out.println("---POSTMATRIX OF INCIDENCY---");
		for (int i = 0; i < postMatrixOfIncidency.length; i++) {
			for (int j = 0; j < postMatrixOfIncidency[i].length; j++) {
				System.out.print((postMatrixOfIncidency[i][j] ? 1 : 0) + " ");
			}
			System.out.println();
		}
		System.out.println();*/
	}

}
